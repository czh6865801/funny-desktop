{
  "name": "funny-desktop",
  "version": "1.0.0",
  "description": "this is a funny desktop",
  "main": "./dist/main.js",
  "author": "chenzhihua",
  "license": "MIT",
  "scripts": {
    "dev": "node .electron-react/dev-runner.js",
    "start": "cross-env NODE_ENV=development electron -r ./.electron-react/babel-register ./src/MainProcess/index.js",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload && npm run build:build",
    "build:renderer": "webpack --config .electron-react/webpack.renderer.js",
    "build:main": " webpack --config .electron-react/webpack.main.js",
    "build:preload": " webpack --config .electron-react/webpack.preload.js",
    "build:build": "cross-env ELECTRON_MIRROR=https://npm.taobao.org/mirrors/electron/ electron-builder"
  },
  "build": {
    "productName": "funny_desktop",
    "appId": "com.example.yourapp",
    "directories": {
      "output": "build"
    },
    "files": [
      "./dist/index.html",
      "./dist/js/index.js",
      "./package.json",
      "./dist/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "icon": "build/icons"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.8",
    "@babel/preset-react": "^7.12.13",
    "@babel/register": "^7.13.16",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "core-js": "^3.12.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.1.0",
    "css-minimizer-webpack-plugin": "^1.3.0",
    "electron": "12.0.0",
    "electron-builder": "^22.10.5",
    "electron-reloader": "^1.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "less": "^4.1.1",
    "less-loader": "^8.0.0",
    "mini-css-extract-plugin": "^1.4.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "antd": "^4.15.0",
    "lodash": "^4.17.21",
    "needle": "^2.6.0",
    "react": "^17.0.1",
    "react-dev-utils": "^11.0.4",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0"
  }
}
